<body>
  <%- include('../partials/aside.ejs')%>


    <!-- ============= Home Section =============== -->
    <section class="home">
      <div class="container">
        <div class="right">
          <h2 id="j">Add User</h2>
          <form action="/admin/adduser" method="post">
            <input type="text" name="Fname" class="field" placeholder="User's First name" />

            <input type="text" name="Lname" class="field" placeholder="User's Last Name" />
            <input type="text" name="Email" class="field" placeholder="User's Email" />
            <input type="password" name="Password" class="field" placeholder="User's Password" />
            <input type="text" name="Phone" class="field" placeholder="User's Phone" />
            <input type="text" name="Address" class="field" placeholder="User's Address" />

            <input type="submit" class="btn" value="ADD"></button>
          </form>




        </div>
      </div>
    </section>
    <script src="/js/adminDashboard.js"></script>


